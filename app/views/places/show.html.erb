<link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">

<section class="clear-fix media-page">

  <header class="media-page-header">
    <section class="media-details">
      <h1><%= @trip.name %> - <%= @place.place %></h1>
    </section>

    <nav>
      <a class="btn btn-primary add-entry">Add Journal Entry</a>
      <a class="btn btn-info add-image">Add Photos</a>
    </nav>
  </header>

  <section class="media-page-body">
    <article class="add-entry-template">
      <%= render :template => "journal_entries/new" %>
    </article>
    <article class="add-images-template">
      <% if !User.find(session[:user]).instagram_account %>
        <%= render :template => "instagram/show" %>
        <script type="text/javascript">
        $(document).ready(function(){
          $(".add-images-template").hide();
          $('.add-image').click(function(){
            $(".add-images-template").slideToggle();
          });
        });
        </script>
      <% end %>
    </article>
    <article class="journal-entries-template">
      <%- @place.journal_entries.each do |entry| %>
        <section class="journal_post">
          <section class="journal_post_title">
            <%= entry.title %>
          </section>
          <section class="journal_post_content">
            <%= entry.post %>
          </section>
        </section>
      <% end %>
    </article>
    <article class="photo-album-template">
      <section class="photo-holder">
          <img src="/../masking_tape.png" class="tape-effect" />
      </section>
      <section class="photo-holder">
          <img src="/../masking_tape.png" class="tape-effect" />
      </section>
      <section class="photo-holder">
          <img src="/../masking_tape.png" class="tape-effect" />
      </section>
      <section class="photo-holder">
          <img src="/../masking_tape.png" class="tape-effect" />
      </section>
    </article>
  </section>
</section>


<script type="text/javascript">
$(document).ready(function(){
    $(".add-entry-template").hide();
    $('.add-entry').click(function(){
      $(".add-entry-template").slideToggle();
      });
  });
</script>
